<section>
    <div class="container mt-5">
        <table class="table mt-5 border" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Category}}</td>
                    <td><img style="width:55px; height:50px" src="/product-images/{{this._id}}.jpeg" alt=""></td>
                    <td>
                        <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="row mt-4  ml-1 float-left"><a href="admin/add-product" class="btn btn-success ml-auto">Add
                Products</a></div>
    </div>
</section>
<script>
    $(function () {
        $('#productsTable').DataTable({
            ordering: true
        });
    });
</script>