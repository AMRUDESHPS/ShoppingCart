<section>
    <div class="container mt-4">
        <div class="row ">
            {{#each products}}
            <div class="col-md-3 p-2">
                <div class="card " style="width: 15rem; height: 26rem;">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpeg" alt="Card image cap"
                        style="width: 237px; height: 250px;">
                    <div class="card-body ">
                        <h5 class="card-title ">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <p class="card-text">Rs.{{this.Price}}</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" id="cart-count">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>