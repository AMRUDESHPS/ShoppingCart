<section style="background-color:rgb(180, 196, 80)">
    <div class="container mt-5 p-3">
        <div class="d-flex flex-row align-items-center"><i class="fa fa-long-arrow-left"></i><span class="ml-2"><a
                    href="/" class="btn btn-info" onclick="return confirm('Do you want to go back?')">Continue
                    Shopping</a></span>
        </div>
        <hr>
        <h2 class="mb-0">Shopping cart</h6>
            <table class="table  mt-5 ">
                <thead>
                    <th scope="col">No</th>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantiy </th>
                    <th scope="col">Button</th>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{@index}}</td>
                        <td><img src="/product-images/{{this.product._id}}.jpeg" alt=""
                                style="width: 50px;height: 50px;"></td>
                        <td>{{this.product.Name}}</td>
                        <td>Rs.{{this.product.Price}}</td>
                        <td>
                            <button class="cart-item-count btn-info"
                                onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',-1)">-</button>
                            <span class="p-1" id="{{this.product._id}}">{{this.quantity}}</span>
                            <button class="cart-item-count btn-info"
                                onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',1)">+</button>
                        </td>
                        <td>
                            <button class="btn btn-danger "
                                onclick="removeButtonFromCartPage('{{this._id}}','{{this.product._id}}')">Remove</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <hr>
            <hr>
            <div>
                <div class="card-footer border-0 px-4 py-4"
                    style="background-color:rgb(38, 80, 143) ; border-radius: 10px; border-bottom-right-radius: 10px;">
                    <h3 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                        price:<span id="total">{{totalValue}}</span></h3>
                    <br>
                    <a href="/place-order" class="btn btn-success " style="width: 100%;"><b>Place order</b></a>
                </div>
</section>